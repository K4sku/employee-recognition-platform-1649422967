<div class='container is-max-desktop'>
  <div class='box'>
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <div class='control'>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class: resource.errors.group_by_attribute.include?(:email) ? 'input is-danger' : 'input' %>
        </div>
        <% if resource.errors.group_by_attribute.include?(:email) %>
          <div class='help is-danger'>
            <% resource.errors.full_messages_for(:email).each do |message| %>
              <%= message %><br>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <div class='control'>
          <%= f.password_field :password, autocomplete: "new-password", 
        class: resource.errors.group_by_attribute.include?(:password) ? 'input is-danger' : 'input' %>
        </div>
        <% if resource.errors.group_by_attribute.include?(:password) %>
          <div class='help is-danger'>
            <% resource.errors.full_messages_for(:password).each do |message| %>
              <%= message %><br>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'label' %>
        <div class='control'>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
        class: resource.errors.group_by_attribute.include?(:password_confirmation) ? 'input is-danger' : 'input' %>
        </div>
        <% if resource.errors.group_by_attribute.include?(:password_confirmation) %>
          <div class='help is-danger'>
            <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
              <%= message %><br>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="actions">
        <div class='control'>
          <%= f.submit "Sign up", class: 'button is-primary' %>
        </div>
      </div>
    <% end %>

    <%= render "employees/shared/links" %>
  </div>
</div>
