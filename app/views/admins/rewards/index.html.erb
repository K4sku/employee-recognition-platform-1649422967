<div class='container is-fluid'>
  <nav class="level is-mobile">
    <div class="level-left">
      <p class='is-size-3'><strong>Rewards</strong></p>
    </div>
    <div class="level-right">
      <%= link_to 'New Reward', new_admins_reward_path, class: 'button is-primary level-item' %>
    </div>
  </nav>
  <div class='box'>
    <div class="list has-hoverable-list-items has-visible-pointer-controls">
      <% @rewards.each do |reward| %>
        <div class="list-item" test_id="reward_<%= reward.id %>">
          <div class="list-item-content">
            <div class="list-item-title"><%= reward.title %></div>
            <div class="list-item-description">
              <p class="has-text-weight-semibold">Price: <%= reward.price %></p>
              <p><%= reward.description %></p>
              <div>
                <% reward.categories.each do |category| %>
                  <span class='tag'> <%= category.title %></span>
                <% end %>
              </div>
            </div>
          </div>

          <div class="list-item-controls">
            <div class="buttons is-right">
              <%= link_to 'Delete', admins_reward_path(reward), method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger is-light is-outlined" %>
              <%= link_to 'Edit', edit_admins_reward_path(reward), class: 'button' %>
              <%= link_to 'Show', admins_reward_path(reward), class: 'button' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
