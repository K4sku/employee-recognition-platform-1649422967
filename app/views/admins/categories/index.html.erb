<div class='container is-fluid'>
  <nav class="level is-mobile">
    <div class="level-left">
      <p class='is-size-3'><strong>Categories</strong></p>
    </div>
    <div class="level-right">
      <%= link_to 'New Category', new_admins_category_path, class: 'button is-primary level-item' %>
    </div>
  </nav>
  <div class='box'>
    <div class="list has-hoverable-list-items has-visible-pointer-controls">
      <% @categories.each do |category| %>
        <div class="list-item" test_id="category_<%= category.id %>">
          <div class="list-item-content">
            <div class="list-item-title"><%= category.title %></div>
            <p>Rewards with category: <%= category.rewards.count %></p>
          </div>

          <div class="list-item-controls">
            <div class="buttons is-right">
              <%= link_to 'Delete', admins_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger is-light is-outlined" %>
              <%= link_to 'Edit', edit_admins_category_path(category), class: 'button' %>
              <%= link_to 'Show', admins_category_path(category), class: 'button' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
