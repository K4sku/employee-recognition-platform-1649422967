<div class='section'>
  <div class='container is-max-desktop'>
    <div class='box'>
      <p class='is-size-4'><strong>Forgot your password?</strong></p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="field">
          <%= f.label :email, class: 'label' %>
          <div class='control'>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class: resource.errors.group_by_attribute.include?(:email) ? 'input is-danger' : 'input' %>
          </div>
          <% if resource.errors.group_by_attribute.include?(:email) %>
            <div class='help is-danger'>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <%= message %><br>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'button is-primary' %>
        </div>
      <% end %>

      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>
