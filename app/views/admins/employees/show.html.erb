<div class='container is-max-widescreen'>
  <nav class="level is-mobile">
  </nav>
  <div class='box'>
    <p class='is-size-3'><strong><%= @employee.email %></strong></p>
    <p>Available kudos: <%= @employee.number_of_available_kudos %></p>
    <p class='mb-4'>Available points: <%= @employee.points %></p>
    <div class='mb-4'>
      <% if admin_signed_in?%>
        <%= link_to 'Back', admins_employees_path, class: "button is-outlined" %>
        <%= link_to 'Edit', edit_admins_employee_path(@employee), class: "button is-outlined" %>
        <%= link_to 'Delete', admins_employee_path(@employee), method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger is-light is-outlined" %>
      <% end %>
    </div>
    <div class='box'>
      <p class='is-size-4'><strong>Orders:</strong></p>
      <div class="list has-hoverable-list-items has-visible-pointer-controls">
        <% @employee.orders.each do |order| %>
          <div class="list-item" test_id="order_<%= order.id %>">
            <div class="list-item-content">
              <div class="list-item-title"><%= order.reward.title %></div>
              <div class="list-item-description">
                <p class="has-text-weight-semibold">Price: <%= order.purchase_price %></p>
                <p><%= order.reward.description %></p>
                <p><%= order.created_at.strftime("%F") %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
