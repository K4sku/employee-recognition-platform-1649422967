<div class='container is-max-widescreen'>
  <nav class="level is-mobile">
    <div class="level-left">
      <p class='is-size-3'><strong>Employees</strong></p>
    </div>
  </nav>
  <div class='box'>
    <div class="list has-hoverable-list-items has-visible-pointer-controls">
      <% @employees.each do |employee| %>
        <div class="list-item" test_id="employee_<%= employee.id %>">
          <div class="list-item-content">
            <div class="list-item-title"><%= employee.email %></div>
            <div class="list-item-description">
              <p>Available kudos: <%= employee.number_of_available_kudos %></p>
            </div>
          </div>

          <div class="list-item-controls">
            <div class="buttons is-right">
              <% if admin_signed_in?%>
                <%= link_to 'Edit', edit_admins_employee_path(employee), class: "button is-outlined" %>
                <%= link_to 'Delete', admins_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger is-light is-outlined" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
