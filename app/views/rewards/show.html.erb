<div class='section'>
  <div class='box'>
    <p>
      <strong>Title:</strong>
      <%= @reward.title %>
    </p>
    <div>
      <%= image_tag @reward.image if @reward.image.attached? %>
    </div>
    <p>
      Price: <%= @reward.price %>
    </p>
    <p>
      <%= @reward.description %>
    </p>

    <div class='mt-3'>
      <%= link_to 'CLAIM REWARD!', orders_path(reward_id: @reward.id), method: :post, data: { confirm: 'Are you sure?' }, class: 'button is-primary' %>
      <%= link_to 'Back', rewards_path, class: 'button' %>
    </div>
  </div>
</div>
